# .env.example
# This file contains example environment variables.
# Copy this to a new file named `.env` in your project root and fill in your actual values.

APP_NAME="Moodle Backend API"
APP_ENV=local
APP_KEY= # This will be generated by 'php artisan key:generate'
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db # This refers to the 'db' service name in docker-compose.yml
DB_PORT=3306
DB_DATABASE=moodle_api_db # Your database name
DB_USERNAME=moodle_user # Your database user
DB_PASSWORD=moodle_password # Your database user password
DB_ROOT_PASSWORD=moodle_root_password # MySQL root password for initial setup

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Moodle Integration Specifics
MOODLE_BASE_URL=lms.jothamhernandez.com # Use a test Moodle instance URL here
MOODLE_MOBILE_SERVICE_SHORTNAME=moodle_mobile_app # Standard Moodle mobile service shortname
